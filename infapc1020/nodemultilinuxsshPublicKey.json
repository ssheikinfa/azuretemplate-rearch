{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string"
        },
        "storageName": {
            "type": "string"
        },
        "storageID": {
            "type": "string"
        },
        "storageRef": {
            "type": "string"
        },
        "vnetName": {
            "type": "string"
        },
        "subnetName": {
            "type": "string"
        },
        "subnetId": {
            "type": "string"
        },
        "nsgName": {
            "type": "string"
        },
        "dbNewOrExisting": {
            "type": "string"
        },
        "dbVMName": {
            "type": "string"
        },
        "dbType": {
            "type": "string"
        },
        "dbName": {
            "type": "string"
        },
        "dbPort": {
            "type": "int"
        },
        "dbTablespace": { 
            "type": "string"
        },
        "dbUser": {
            "type": "string"
        },
        "dbPassword": {
            "type": "securestring"
        },
        "dbPCRSUser": {
            "type": "string"
        },
        "dbPCRSPassword": {
            "type": "securestring"
        },
        "nodeVMSize": {
            "type": "string"
        },
        "nodeVMOSType": {
            "type": "string"
        },
        "nodeVMAdminUsername": {
            "type": "string"
        },
        "nodeVMAdminPassword": {
            "type": "securestring"
        },
        "nodeVMAdminSshPublicKey": {
            "type": "securestring"
        },
        "nodeVMNamePrefix": {
            "type": "string"
        },
        "nodeVMCount": {
            "type": "int"
        },
        "infaVersion": {
            "type": "string"
        },
        "infaDomainName": {
            "type": "string"
        },
        "infaDomainUser": {
            "type": "string"
        },
        "infaDomainPassword": {
            "type": "securestring"
        },
        "infaNodeNamePrefix": {
            "type": "string"
        },
        "infaKeyword": {
            "type": "securestring"
        },
        "infaDomainLicense": {
            "type": "securestring"
        },
        "infaPCRSName": {
            "type": "string"
        },
        "infaPCISName": {
            "type": "string"
        },
        "baseUrl": {
            "type": "string"
        },
        "informaticaTags": {
            "type": "object"
        }
    },
    "variables": {
        "nodeVMDNSName": "[toLower(concat(parameters('nodeVMNamePrefix'), uniqueString(resourceGroup().id, deployment().name)))]",
        "nodeVMNicPrefix": "[concat(parameters('nodeVMNamePrefix'),'Nic')]",

        "gatewayCount": "[sub(parameters('nodeVMCount'), 1)]",

        "extScriptURI": "[parameters('baseUrl')]",
        "extScriptFile": "lininfainstaller.sh",

        "sshKeyPath": "[concat('/home/',parameters('nodeVMAdminUsername'),'/.ssh/authorized_keys')]",

        "infaNodePort": 6005,

        "imagePublisher": "informatica",
        "imageOffer": "platform_10_1_1_multi_node_domain_rhel-7-3_byol",
        "osVersion": "byol_rhel_7_3_platform_10_1_1"
    },
    "resources": [
        {
            "name": "[concat(variables('nodeVMDNSName'), '1')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "location": "[parameters('location')]",
            "apiVersion": "2016-10-01",

            "tags": {
                "displayName": "publicip",
                "provider": "[toUpper(parameters('informaticaTags').provider)]"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[concat(variables('nodeVMDNSName'), '1')]"
                }
            }
        },
        {
            "name": "[concat(variables('nodeVMNicPrefix'), '1')]",
            "type": "Microsoft.Network/networkInterfaces",
            "location": "[parameters('location')]",
            "apiVersion": "2016-10-01",
            "dependsOn": [
                "[concat('Microsoft.Network/publicIPAddresses/', variables('nodeVMDNSName'), '1')]"
            ],
            "tags": {
                "displayName": "niccard",
                "provider": "[toUpper(parameters('informaticaTags').provider)]"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[parameters('subnetId')]"
                            },
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(variables('nodeVMDNSName'), '1'))]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsgName'))]"
                }
            }
        },
        {
            "name": "[concat(parameters('nodeVMNamePrefix'), '1')]",
            "type": "Microsoft.Compute/virtualMachines",
            "location": "[parameters('location')]",
            "apiVersion": "2016-03-30",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('nodeVMNicPrefix'), '1')]"
            ],
            "plan": {
                "name": "[variables('osVersion')]",
                "publisher": "[variables('imagePublisher')]",
                "product": "[variables('imageOffer')]"
            },
            "tags": {
                "displayName": "nodevm",
                "provider": "[toUpper(parameters('informaticaTags').provider)]"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('nodeVMSize')]"
                },
                "osProfile": {
                    "computerName": "[concat(parameters('nodeVMNamePrefix'), '1')]",
                    "adminUsername": "[parameters('nodeVMAdminUsername')]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": "true",
                        "ssh": {
                            "publicKeys": [
                                {
                                    "path": "[variables('sshKeyPath')]",
                                    "keyData": "[parameters('nodeVMAdminSshPublicKey')]"
                                }
                            ]
                        }
                    }
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('imagePublisher')]",
                        "offer": "[variables('imageOffer')]",
                        "sku": "[variables('osVersion')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "InfaOSDisk",
                        "caching": "ReadWrite",
                        "createOption": "FromImage",
                        "vhd": {
                            "uri": "[concat(parameters('storageRef'), '/vhds/', parameters('nodeVMNamePrefix'), uniqueString(resourceGroup().id, deployment().name), '1', '.osdisk.vhd')]"
                        }
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('nodeVMNicPrefix'), '1'))]"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "name": "ScriptExtGVM",
                    "type": "extensions",
                    "location": "[parameters('location')]",
                    "apiVersion": "2016-03-30",
                    "dependsOn": [
                        "[concat('Microsoft.Compute/virtualMachines/', parameters('nodeVMNamePrefix'), '1')]"
                    ],
                    "tags": {
                        "displayName": "informaticaextension",
                        "provider": "[toUpper(parameters('informaticaTags').provider)]"
                    },
                    "properties": {
                        "publisher": "Microsoft.OSTCExtensions",
                        "type": "CustomScriptForLinux",
                        "typeHandlerVersion": "1.5",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "fileUris": [
                                "[concat(variables('extScriptURI'),  variables('extScriptFile'))]"
                            ]
                        },
                        "protectedSettings": {
                            "commandToExecute": "[concat('sh ', variables('extScriptFile'), ' ', parameters('infaVersion'), ' ', concat(parameters('nodeVMNamePrefix'), '1'), ' ', parameters('infaDomainName'), ' \"', parameters('infaDomainUser'), '\" \"', parameters('infaDomainPassword'), '\" ', parameters('nodeVMCount'), ' ', parameters('infaNodeNamePrefix'), '1', ' ', variables('infaNodePort'), ' ', parameters('infaPCRSName'), ' ', parameters('infaPCISName'), ' ', parameters('dbNewOrExisting'), ' ', parameters('dbType'), ' ', parameters('dbName'), ' ', parameters('dbTablespace'), ' \"', parameters('dbUser'), '\" \"', parameters('dbPassword'), '\" ', parameters('dbPCRSUser'), ' \"', parameters('dbPCRSPassword'), '\" ',parameters('dbVMName'), ' ', parameters('dbPort'), ' \"', parameters('infaKeyword'), '\" 0 \"', parameters('nodeVMAdminUsername'), '\" \"', parameters('storageName'), '\" ', listKeys(parameters('storageID'), '2016-01-01').keys[0].value, ' \"', parameters('infaDomainLicense'), '\"')]"
                        }
                    }
                }
            ]
        },
        {
            "name": "[concat(variables('nodeVMDNSName'), add(copyIndex(), 2))]",
            "type": "Microsoft.Network/publicIPAddresses",
            "location": "[parameters('location')]",
            "apiVersion": "2016-10-01",
            "dependsOn": [ ],
            "copy": {
                "name": "gatewayCount",
                "count": "[variables('gatewayCount')]"
            },
            "tags": {
                "displayName": "gwpublicip",
                "provider": "[toUpper(parameters('informaticaTags').provider)]"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[concat(variables('nodeVMDNSName'), add(copyIndex(), 2))]"
                }
            }
        },
        {
            "name": "[concat(variables('nodeVMNicPrefix'), add(copyIndex(), 2))]",
            "type": "Microsoft.Network/networkInterfaces",
            "location": "[parameters('location')]",
            "apiVersion": "2016-10-01",
            "dependsOn": [
                "[concat('Microsoft.Network/publicIPAddresses/', variables('nodeVMDNSName'), add(copyIndex(), 2))]"
            ],
            "copy": {
                "name": "gatewayCount",
                "count": "[variables('gatewayCount')]"
            },
            "tags": {
                "displayName": "gwniccard",
                "provider": "[toUpper(parameters('informaticaTags').provider)]"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[parameters('subnetId')]"
                            },
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(variables('nodeVMDNSName'), add(copyIndex(), 2)))]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsgName'))]"
                }
            }
        },
        {
            "name": "[concat(parameters('nodeVMNamePrefix'), add(copyIndex(), 2))]",
            "type": "Microsoft.Compute/virtualMachines",
            "location": "[parameters('location')]",
            "apiVersion": "2016-03-30",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('nodeVMNicPrefix'), add(copyIndex(), 2))]",
                "[concat('Microsoft.Compute/virtualMachines/', parameters('nodeVMNamePrefix'), '1')]"
            ],
            "plan": {
                "name": "[variables('osVersion')]",
                "publisher": "[variables('imagePublisher')]",
                "product": "[variables('imageOffer')]"
            },
            "copy": {
                "name": "gatewayCount",
                "count": "[variables('gatewayCount')]"
            },
            "tags": {
                "displayName": "gwnodevm",
                "provider": "[toUpper(parameters('informaticaTags').provider)]"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('nodeVMSize')]"
                },
                "osProfile": {
                    "computerName": "[concat(parameters('nodeVMNamePrefix'), add(copyIndex(), 2))]",
                    "adminUsername": "[parameters('nodeVMAdminUsername')]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": "true",
                        "ssh": {
                            "publicKeys": [
                                {
                                    "path": "[variables('sshKeyPath')]",
                                    "keyData": "[parameters('nodeVMAdminSshPublicKey')]"
                                }
                            ]
                        }
                    }
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[variables('imagePublisher')]",
                        "offer": "[variables('imageOffer')]",
                        "sku": "[variables('osVersion')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "InfaOSDisk",
                        "caching": "ReadWrite",
                        "createOption": "FromImage",
                        "vhd": {
                            "uri": "[concat(parameters('storageRef'), '/vhds/', parameters('nodeVMNamePrefix'), uniqueString(resourceGroup().id, deployment().name), add(copyIndex(), 2), '.osdisk.vhd')]"
                        }
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('nodeVMNicPrefix'), add(copyIndex(), 2)))]"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "name": "ScriptExtGVM",
                    "type": "extensions",
                    "location": "[parameters('location')]",
                    "apiVersion": "2016-03-30",
                    "dependsOn": [
                        "[concat('Microsoft.Compute/virtualMachines/', parameters('nodeVMNamePrefix'), add(copyIndex(), 2))]"
                    ],
                    "tags": {
                        "displayName": "informaticaextension",
                        "provider": "[toUpper(parameters('informaticaTags').provider)]"
                    },
                    "properties": {
                        "publisher": "Microsoft.OSTCExtensions",
                        "type": "CustomScriptForLinux",
                        "typeHandlerVersion": "1.5",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "fileUris": [
                                "[concat(variables('extScriptURI'),  variables('extScriptFile'))]"
                            ]
                        },
                        "protectedSettings": {
                            "commandToExecute": "[concat('sh ', variables('extScriptFile'), ' ', parameters('infaVersion'), ' ', concat(parameters('nodeVMNamePrefix'), '1'), ' ', parameters('infaDomainName'), ' \"', parameters('infaDomainUser'), '\" \"', parameters('infaDomainPassword'), '\" ', parameters('nodeVMCount'), ' ', parameters('infaNodeNamePrefix'), add(copyIndex(), 2), ' ', variables('infaNodePort'), ' ', parameters('infaPCRSName'), ' ', parameters('infaPCISName'), ' ', parameters('dbNewOrExisting'), ' ', parameters('dbType'), ' ', parameters('dbName'), ' ', parameters('dbTablespace'), ' \"', parameters('dbUser'), '\" \"', parameters('dbPassword'), '\" ', parameters('dbPCRSUser'), ' \"', parameters('dbPCRSPassword'), '\" ', parameters('dbVMName'), ' ', parameters('dbPort'), ' \"', parameters('infaKeyword'), '\" 1 \"', parameters('nodeVMAdminUsername'), '\" \"', parameters('storageName'), '\" ', listKeys(parameters('storageID'), '2016-01-01').keys[0].value, ' \"', parameters('infaDomainLicense'), '\"')]"
                        }
                    }
                }
            ]
        }
    ],
    "outputs": {
        "fqdn1": {
            "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses',concat(variables('nodeVMDNSName'), '1')), '2016-10-01').dnsSettings.fqdn]",
            "type": "string"
        },
        "fqdn2": {
            "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses',concat(variables('nodeVMDNSName'), '2')), '2016-10-01').dnsSettings.fqdn]",
            "type": "string"
        }
    }
}